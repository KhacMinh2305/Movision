<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="architecture.ui.view.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_movieListFragment"
            app:destination="@id/movieListFragment"
            app:restoreState="true"/>
        <action
            android:id="@+id/action_homeFragment_to_peopleListFragment"
            app:destination="@id/peopleListFragment"
            app:restoreState="true"/>
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:restoreState="true"/>
    </fragment>

    <fragment
        android:id="@+id/movieListFragment"
        android:name="architecture.ui.view.fragment.MovieListFragment"
        android:label="MovieListFragment" />
    <fragment
        android:id="@+id/peopleListFragment"
        android:name="architecture.ui.view.fragment.PeopleListFragment"
        android:label="PeopleListFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="architecture.ui.view.fragment.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>