<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="architecture.ui.view.fragment.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:restoreState="false"/>
        <action
            android:id="@+id/action_loginFragment_to_genresFragment2"
            app:destination="@id/genresFragment"
            app:restoreState="false"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="architecture.ui.view.fragment.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_genresFragment2"
            app:destination="@id/genresFragment" />
    </fragment>
    <fragment
        android:id="@+id/genresFragment"
        android:name="architecture.ui.view.fragment.GenresFragment"
        android:label="fragment_genres"
        tools:layout="@layout/fragment_genres" />
</navigation>