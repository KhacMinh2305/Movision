<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="architecture.ui.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/widget"
        tools:context="architecture.ui.view.fragment.LoginFragment">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:importantForAccessibility="no"
            android:src="@drawable/splash_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sloganTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich_regular"
            android:text="@string/splash_slogan"
            android:textColor="@color/app_background"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bodyContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_container_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sloganTextView">

            <TextView
                android:id="@+id/titleLoginTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/albert_sans_bold"
                android:gravity="center"
                android:text="@string/login_title"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailLoginEditText"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/username_edittext_background"
                android:fontFamily="@font/albert_sans_regular"
                android:hint="@string/email_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="60dp"
                android:paddingEnd="15dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleLoginTextView"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/passwordLoginEditText"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/password_edittext_background"
                android:fontFamily="@font/albert_sans_regular"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:importantForAutofill="no"
                android:paddingStart="60dp"
                android:paddingEnd="15dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailLoginEditText" />

            <TextView
                android:id="@+id/countDownTextView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/albert_sans_bold"
                android:background="@drawable/common_container_background"
                android:gravity="center"
                android:textSize="18sp"
                android:visibility="gone"
                android:textColor="@color/widget"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgotPasswordTextView"
                tools:text="Retry after : 01:00" />

            <Button
                android:id="@+id/verifySignInButton"
                style="@style/Custom.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/widget"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/verify"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/indicatorTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgotPasswordTextView" />

            <TextView
                android:id="@+id/sendingCodeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/albert_sans_bold"
                android:gravity="center_vertical|end"
                android:text="@string/sending"
                android:textColor="@color/widget"
                android:textSize="15sp"
                android:visibility="@{viewmodel.sendingState ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordLoginEditText" />

            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/albert_sans_bold"
                android:gravity="center_vertical|end"
                android:text="@string/forgot_password"
                android:textColor="@color/widget"
                android:textSize="15sp"
                android:visibility="@{viewmodel.sendingState ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordLoginEditText" />

            <Button
                android:id="@+id/loginButton"
                style="@style/Custom.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/widget"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/login"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/indicatorTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgotPasswordTextView" />

            <TextView
                android:id="@+id/indicatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:alpha="0.7"
                android:fontFamily="@font/albert_sans_regular"
                android:gravity="center"
                android:text="@string/or"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/otherSignInContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginButton" />

            <LinearLayout
                android:id="@+id/otherSignInContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/createAccountTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/indicatorTextView">

                <ImageButton
                    android:id="@+id/googleImageButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_button_background"
                    android:importantForAccessibility="no"
                    android:layout_marginEnd="25dp"
                    android:padding="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_google" />

                <ImageButton
                    android:id="@+id/facebookImageButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_button_background"
                    android:importantForAccessibility="no"
                    android:padding="22dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_facebook" />
            </LinearLayout>

            <TextView
                android:id="@+id/createAccountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/create_a_new_account"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toTopOf="@+id/signUpImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/otherSignInContainer" />

            <ImageView
                android:id="@+id/signUpImageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:padding="6dp"
                android:background="@drawable/up_login_button_background"
                android:src="@drawable/ic_up"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/bottomSheetAnchorView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/bottomSheet"
            layout="@layout/verification_code_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@id/bottomSheetAnchorView"
            app:layout_anchorGravity="top" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>