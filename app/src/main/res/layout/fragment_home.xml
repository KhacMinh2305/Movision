<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="sharedViewModel"
            type="architecture.ui.viewmodel.SharedViewModel" />

        <variable
            name="viewmodel"
            type="architecture.ui.viewmodel.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        tools:context="architecture.ui.view.fragment.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/notificationImageButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:importantForAccessibility="no"
                    android:padding="4dp"
                    android:background="@null"
                    android:src="@drawable/ic_notification"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/userShapeableImageView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:importantForAccessibility="no"
                    android:padding="3dp"
                    app:shapeAppearance="@style/RoundShapableImageView"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="15dp"
                    app:layout_goneMarginTop="15dp"
                    app:userAvatar="@{viewmodel.userAvatarState}"
                    app:defaultAvatar="@{@drawable/default_user}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <architecture.ui.view.custom.ImageSlider
                    android:id="@+id/bannerImageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userShapeableImageView" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userGenresRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/addGenresButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannerImageSlider"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/user_genre_item" />

                <ImageButton
                    android:id="@+id/addGenresButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:importantForAccessibility="no"
                    android:padding="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bannerImageSlider" />

                <include
                    android:id="@+id/trendingPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/addGenresButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <include
                    android:id="@+id/topRatedPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/trendingPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <include
                    android:id="@+id/popularPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/topRatedPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <include
                    android:id="@+id/playingPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/popularPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <include
                    android:id="@+id/popularPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/playingPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <include
                    android:id="@+id/randomGenres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/popularPeople"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <include
                    android:id="@+id/trendingPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/home_category_layout"
                    app:layout_constraintTop_toBottomOf="@id/randomGenres"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <!--padding bottom-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trendingPeople"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/bottomSheetAnchorView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="10dp"
            android:layout_gravity="bottom"/>

        <include
            android:id="@+id/genresBottomSheet"
            layout="@layout/genres_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@id/bottomSheetAnchorView"
            app:layout_anchorGravity="top" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>