<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/app_background"
        tools:context="architecture.ui.view.fragment.ChangeAvatarFragment">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.canhub.cropper.CropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/openGalleryImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button_background"
            android:importantForAccessibility="no"
            android:padding="11dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom|start"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_open_gallery" />

        <ImageButton
            android:id="@+id/openCameraImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button_background"
            android:importantForAccessibility="no"
            android:padding="11dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom|end"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_open_camera" />

        <ImageButton
            android:id="@+id/confirmImageButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/back_button_background"
            android:importantForAccessibility="no"
            android:padding="11dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_confirm" />
    </FrameLayout>
</layout>