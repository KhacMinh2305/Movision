<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="architecture.ui.viewmodel.MovieDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="architecture.ui.view.fragment.MovieDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background">

            <ImageButton
                android:id="@+id/backImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_button_background"
                android:importantForAccessibility="no"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/movieShapeableImageView"
                android:layout_width="330dp"
                android:layout_height="330dp"
                app:shapeAppearance="@style/BigCorneredImage"
                android:src="@drawable/user_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="30dp"
                app:imageUrl="@{viewModel.movieImageUrlState}"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backImageButton" />

            <TextView
                android:id="@+id/movieNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/albert_sans_black"
                android:textSize="30sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@{viewModel.movieNameState}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieShapeableImageView"
                tools:text="Doan Khac Minh" />

            <TextView
                android:id="@+id/genresTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Drama | Thriller | Comedy | Mistery"
                android:alpha="0.6"
                android:textSize="15sp"
                android:fontFamily="@font/albert_sans_regular"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@{viewModel.movieGenresState}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieNameTextView" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                tools:text="Được dịch từ tiếng Anh-Trong xuất bản và thiết kế đồ họa, Lorem ipsum là một văn bản giữ chỗ thường được sử dụng để thể hiện hình thức trực quan của một tài liệu hoặc một kiểu chữ mà không cần dựa vào nội dung có ý nghĩa. "
                android:textSize="16sp"
                android:text="@{viewModel.movieDescriptionState}"
                android:fontFamily="@font/albert_sans_regular"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genresTextView" />

            <TextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:drawableStartCompat="@drawable/ic_time"
                android:drawablePadding="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
                android:background="@drawable/movie_detail_txt_view_background"
                app:duration="@{viewModel.movieDurationState}"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/albert_sans_bold"
                tools:text="123 minutes" />

            <TextView
                android:id="@+id/yearTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:drawableStartCompat="@drawable/ic_calendar"
                android:drawablePadding="7dp"
                app:layout_constraintStart_toEndOf="@id/durationTextView"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
                android:background="@drawable/movie_detail_txt_view_background"
                android:text="@{viewModel.movieYearState}"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/albert_sans_bold"
                tools:text="2024" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:drawableStartCompat="@drawable/ic_small_star"
                android:drawablePadding="7dp"
                app:layout_constraintStart_toEndOf="@id/yearTextView"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
                android:background="@drawable/movie_detail_txt_view_background"
                android:text="@{viewModel.movieRatingState}"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/albert_sans_bold"
                tools:text="8.8" />

            <ImageButton
                android:id="@+id/addToListCheckBox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:background="@null"
                android:src="@drawable/ic_add_to_list_filled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/durationTextView" />

            <FrameLayout
                android:id="@+id/ratingContainer"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/addToListCheckBox"
                app:layout_constraintTop_toBottomOf="@+id/durationTextView">

                <CheckBox
                    android:id="@+id/rateCheckBox"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    android:padding="11dp"
                    android:visibility="@{viewModel.ratingButtonVisibility ? View.VISIBLE : View.GONE}"
                    app:drawableStartCompat="@drawable/rate_checkbox_gb"/>

                <TextView
                    android:id="@+id/userRatingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    android:padding="11dp"
                    tools:text="8.5"
                    android:textColor="@color/widget"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@{viewModel.ratingTextViewTextState}"
                    android:visibility="@{viewModel.ratingTextViewVisibilityState ? View.VISIBLE : View.GONE}"
                    android:fontFamily="@font/albert_sans_bold"/>
            </FrameLayout>

            <CheckBox
                android:id="@+id/favoriteCheckBox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:padding="10dp"
                app:drawableStartCompat="@drawable/favorite_checkbox_bg"
                app:layout_constraintStart_toEndOf="@id/ratingContainer"
                app:layout_constraintTop_toBottomOf="@+id/durationTextView" />

            <TextView
                android:id="@+id/castTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/caster"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addToListCheckBox" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/casterRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/castTitleTextView" />

            <TextView
                android:id="@+id/clipTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/clip"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/casterRecyclerView" />

            <WebView
                android:id="@+id/playerWebView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clipTitleTextView" />

            <ImageButton
                android:id="@+id/backwardImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_backward"
                android:background="@null"
                android:padding="11dp"
                android:scaleType="centerCrop"
                android:foregroundGravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/playerWebView"
                app:layout_constraintStart_toStartOf="parent"/>

            <architecture.ui.view.custom.SnapRecyclerView
                android:id="@+id/clipRecyclerView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintStart_toEndOf="@id/backwardImageButton"
                app:layout_constraintEnd_toStartOf="@+id/towardImageButton"
                app:layout_constraintTop_toBottomOf="@+id/playerWebView"/>

            <ImageButton
                android:id="@+id/towardImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_forward"
                android:background="@null"
                android:padding="11dp"
                android:scaleType="centerCrop"
                android:foregroundGravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/playerWebView"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/reviewTextView"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/review"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/towardImageButton"/>

            <TextView
                android:id="@+id/seeAllReviewsTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/albert_sans_regular"
                android:text="@string/see_more"
                android:textSize="16sp"
                android:textColor="@color/widget"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/towardImageButton"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewTextView"/>

            <TextView
                android:id="@+id/recommendationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/same_movie"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewsRecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommendationTextView" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommendationRecyclerView"/>


            <!--TODO: remove this to another fragment !-->
            <!--<View
                android:id="@+id/bottomSheetAnchorView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                android:id="@+id/reviewSheet"
                layout="@layout/review_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_anchor="@id/bottomSheetAnchorView"
                app:layout_anchorGravity="top" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>