<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="architecture.ui.viewmodel.PeopleViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/app_background"
        tools:context="architecture.ui.view.fragment.PeopleFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/backImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_button_background"
                android:importantForAccessibility="no"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/movieShapeableImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:shapeAppearance="@style/BigCorneredImage"
                app:imageUrl="@{viewModel.personPosterPathState}"
                android:src="@drawable/user_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backImageButton"/>

            <TextView
                android:id="@+id/movieNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/albert_sans_black"
                android:textSize="30sp"
                android:text="@{viewModel.personNameState}"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieShapeableImageView"
                tools:text="Doan Khac Minh" />

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                tools:text="Được dịch từ tiếng Anh-Trong xuất bản và thiết kế đồ họa, Lorem ipsum là một văn bản giữ chỗ thường được sử dụng để thể hiện hình thức trực quan của một tài liệu hoặc một kiểu chữ mà không cần dựa vào nội dung có ý nghĩa. "
                android:textSize="16sp"
                android:text="@{viewModel.personBioState}"
                android:fontFamily="@font/albert_sans_regular"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieNameTextView" />

            <TextView
                android:id="@+id/birthDayTextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:fontFamily="@font/albert_sans_bold"
                android:gravity="start|center_vertical"
                android:drawablePadding="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@{viewModel.personBirthDayState}"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:drawableStartCompat="@drawable/ic_birthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bioTextView"
                tools:text="23-01-2003" />

            <TextView
                android:id="@+id/occupationTextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:fontFamily="@font/albert_sans_bold"
                android:gravity="start|center_vertical"
                android:drawablePadding="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@{viewModel.personPositionState}"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:drawableStartCompat="@drawable/ic_actor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birthDayTextView"
                tools:text="Actor" />

            <TextView
                android:id="@+id/homeTownTextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:fontFamily="@font/albert_sans_bold"
                android:gravity="start|center_vertical"
                android:drawablePadding="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@{viewModel.personBirthPlaceState}"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:drawableStartCompat="@drawable/ic_place"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/occupationTextView"
                tools:text="New Cross, London, England, UK" />

            <TextView
                android:id="@+id/albumTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/albert_sans_bold"
                android:text="@string/images"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeTownTextView" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/albumRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/albumTitleTextView"/>

            <TextView
                android:id="@+id/castingMovieTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/casting_movies"
                android:fontFamily="@font/albert_sans_bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/albumRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/castingMovieRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/castingMovieTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/castingMovieRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>