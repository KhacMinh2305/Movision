<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="architecture.ui.viewmodel.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        tools:context="architecture.ui.view.fragment.ProfileFragment">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button_background"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userShapeableImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="80dp"
            app:userAvatar="@{viewmodel.userAvatarState}"
            app:defaultAvatar="@{@drawable/default_user}"
            app:layout_constraintBottom_toTopOf="@+id/infoContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundShapableImageView" />

        <ImageButton
            android:id="@+id/peekAvatarImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/camera_button_background"
            android:importantForAccessibility="no"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toTopOf="@+id/infoContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />

        <FrameLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/userShapeableImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/profile_info_container_background">

                <TextView
                    android:id="@+id/gmailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/profile_gmail_field_background"
                    android:fontFamily="@font/albert_sans_black"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/widget"
                    android:text="@{viewmodel.userGmailState}"
                    tools:text="doankhacminh2301@gmail.com"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_phone_field_background"
                    android:fontFamily="@font/albert_sans_black"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/widget"
                    android:text="@{viewmodel.numberPhoneState}"
                    tools:text="0866889***"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@id/gmailTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/changePasswordTextView"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_password_field_background"
                    android:fontFamily="@font/albert_sans_black"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/widget"
                    android:paddingTop="30dp"
                    android:text="@string/change_password"
                    android:layout_marginEnd="7.5dp"
                    android:layout_marginStart="15dp"
                    app:layout_constraintEnd_toStartOf="@id/chatTextView"
                    app:layout_constraintTop_toBottomOf="@id/phoneTextView"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/chatTextView"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_chat_field_background"
                    android:fontFamily="@font/albert_sans_black"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/widget"
                    android:paddingTop="30dp"
                    android:text="@string/contact"
                    android:layout_marginStart="7.5dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@id/phoneTextView"
                    app:layout_constraintStart_toEndOf="@id/changePasswordTextView"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/signOutButton"
                    style="@style/Custom.ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/widget"
                    android:text="@string/sign_out"
                    android:textSize="16sp"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"  />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@{viewmodel.usernameState}"
                android:fontFamily="@font/albert_sans_black"
                android:gravity="center"
                android:background="@drawable/profile_name_background"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                tools:text="Doan Khac Minh"
                android:textSize="25sp" />
        </FrameLayout>

        <View
            android:id="@+id/bottomSheetAnchorView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/bottomSheet"
            layout="@layout/change_password_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@id/bottomSheetAnchorView"
            app:layout_anchorGravity="top" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>