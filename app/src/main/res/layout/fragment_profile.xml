<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        tools:context="architecture.ui.view.fragment.ProfileFragment">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button_background"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/signOutImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_button_background"
            android:padding="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logout"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_image"
            app:layout_constraintBottom_toTopOf="@+id/infoContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundShapableImageView" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albert_sans_black"
            android:gravity="center"
            android:text="Doan Khac Minh"
            app:layout_constraintVertical_bias="0.2"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/infoContainer"
            app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="500dp"
            android:background="@color/content_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>