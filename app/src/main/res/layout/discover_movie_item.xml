<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="item"
            type="architecture.data.model.movie.in_app.DiscoverMovieItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movieShapeableImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="5dp"
            android:src="@drawable/user_image"
            app:imageUrl="@{item.posterPath}"
            app:layout_constraintBottom_toTopOf="@+id/indicatorView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/CorneredImage" />

        <TextView
            android:id="@+id/movieNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albert_sans_bold"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            android:text="@{item.name}"
            android:layout_marginTop="5dp"
            android:gravity="start|center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@id/movieOverviewTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movieShapeableImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Doan Khac Minh va nhung nguoi ban" />


        <TextView
            android:id="@+id/movieOverviewTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/albert_sans_regular"
            android:textSize="14sp"
            android:lines="2"
            android:ellipsize="end"
            android:text="@{item.overview}"
            android:gravity="start|center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toTopOf="@id/ratingTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movieShapeableImageView"
            app:layout_constraintTop_toBottomOf="@id/movieNameTextView"
            tools:text="Doan Khac Minh va nhung nguoi ban" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/albert_sans_regular"
            android:gravity="start|center_vertical"
            android:lines="1"
            android:text="@{String.valueOf(item.voteAverage)}"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_small_star"
            app:layout_constraintBottom_toTopOf="@id/indicatorView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movieShapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/movieOverviewTextView"
            tools:text="8.8" />

        <View
            android:id="@+id/indicatorView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/movieShapeableImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:background="@color/back_button_color"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>