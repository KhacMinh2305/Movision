<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:padding="15dp"
        tools:context="architecture.ui.view.fragment.PeopleListFragment">

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/genre_item_background"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            tools:text="Doan Khac Minh"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backImageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/maleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backImageButton"
            android:background="@drawable/genre_item_background"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/maleCheckBox"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:button="@null"
                android:padding="10dp"
                android:drawableEnd="@drawable/people_male_check_box_button"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/secondary_text"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/male"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/femaleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/maleContainer"
            app:layout_constraintTop_toBottomOf="@+id/backImageButton"
            android:background="@drawable/genre_item_background"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/femaleCheckBox"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:button="@null"
                android:padding="10dp"
                android:drawableEnd="@drawable/people_female_checkbox_button"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/secondary_text"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/female"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peopleRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            tools:listitem="@layout/people_list_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/femaleContainer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>