<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="movie"
            type="architecture.data.local.entity.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/peopleShapeableImageView"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_image"
            app:imageUrl="@{movie.posterPath}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/CorneredImage" />

        <TextView
            android:id="@+id/movieNameTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            tools:text="Movie name"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:movieName="@{movie.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/peopleShapeableImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/overviewTextView"/>

        <TextView
            android:id="@+id/overviewTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:lineHeight="20dp"
            android:maxLines="3"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textSize="14sp"
            app:movieDescription="@{movie.description}"
            app:layout_constraintBottom_toTopOf="@id/releasedTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/peopleShapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/movieNameTextView"
            tools:text="@string/login_note" />

        <TextView
            android:id="@+id/releasedTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textSize="16sp"
            app:movieReleaseDate="@{movie.releaseDate}"
            app:layout_constraintBottom_toTopOf="@id/ratingTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/peopleShapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/overviewTextView"
            tools:text="Released : 23-01-2003" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:importantForAccessibility="no"
            android:padding="2dp"
            android:src="@drawable/ic_rating_filled"
            app:layout_constraintBottom_toTopOf="@+id/genresRecyclerView"
            app:layout_constraintStart_toEndOf="@+id/peopleShapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/releasedTextView" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textSize="16sp"
            app:movieRating="@{(float) movie.voteAverage}"
            app:layout_constraintBottom_toTopOf="@id/genresRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/releasedTextView"
            tools:text="8.8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/genresRecyclerView"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/peopleShapeableImageView"
            app:layout_constraintTop_toBottomOf="@+id/ratingTextView"
            android:orientation="horizontal"
            tools:listitem="@layout/genre_inside_movie_item"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>