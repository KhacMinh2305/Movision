<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Movision" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/widget</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/static_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Movision</item>
    </style>

    <!--<item name="backgroundTint">@color/widget</item>-->
    <style name="Custom.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/app_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CorneredImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>